# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Authorship
GET     /author/:name           controllers.AuthorController.getPapers(name: String)

#Find Expert by keyword
GET     /expertByKeyword/:keyword           controllers.FindExpertByKeyWordController.getExpert(keyword: String)

#Find topics by channel
GET     /topicsByChannel/:channel           controllers.FindTopicsByChannelController.getTopics(channel: String)


# Authorship
GET     /autho/:name           controllers.yearController.getPapersYear(name: String, from, to)
# Authorship
GET     /journal/:name           controllers.JournalHistogramController.getJournalAuthors(name: String)



#Reference
GET     /reference/:name        controllers.PaperController.getPapers(name:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
